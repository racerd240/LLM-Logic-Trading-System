# Coinbase Exchange (formerly Pro) API
# NOTE: Secret must be BASE64 as provided when you created the key.
COINBASE_API_KEY=YOUR_COINBASE_API_KEY
COINBASE_API_SECRET=YOUR_COINBASE_API_SECRET_BASE64
COINBASE_API_PASSPHRASE=YOUR_COINBASE_API_PASSPHRASE

# Target API set. Valid: exchange (default). Advanced Trade requires different signing; not enabled in this drop.
COINBASE_API_TARGET=exchange

# LLM endpoint (POST {"context":"<json>"} -> JSON response)
LLM_ENDPOINT_URL=http://localhost:11434/decision

# Optional: Sentiment APIs
LUNARCRUSH_API_KEY=YOUR_LUNARCRUSH_API_KEY
COINMARKETCAP_API_KEY=YOUR_CMC_KEY
WHALEALERT_API_KEY=YOUR_WHALEALERT_KEY

# Optional: Price guard relative tolerance (fraction). Example: 0.005 = 0.5%
PRICE_GUARD_TOLERANCE=0.005